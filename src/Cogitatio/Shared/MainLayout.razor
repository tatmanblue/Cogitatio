@using Cogitatio.Models
@inherits LayoutComponentBase
@inject SiteSettings SiteSettings

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            @SiteSettings.LongTitle
            <NavLink class="nav-link" href="About">
                <i class="bi bi-question-square"></i> About
            </NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
        <footer>
            <p>
                @((MarkupString)SiteSettings.Copyright)<br/>
                <!-- please do not remove the Cogitatio credits -->
                Site built on <a href="https://github.com/tatmanblue/Cogitatio" target="_blank" rel="noopener noreferrer">Cogitatio</a>.
            </p>
        </footer>        
    </main>
</div>

<div id="blazor-error-ui">
    The bikini bottom atoll is sinking.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>