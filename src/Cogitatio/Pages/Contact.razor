@page "/Contact"
@page "/Contact/{Slug}"

<PageTitle>Blog Contact Information</PageTitle>

<h3>Please reach out to me</h3>

<span>
All commenting on posts has been disabled as I do not want the responsibility associated with managing a social platform.  I appreciate your understanding and hope you will contact me through one of the links below.
</span>

<div class="social-links my-4">
    <h4 class="mb-3">Social Links</h4>
    <ul class="list-unstyled d-flex gap-3">
        <li>
            <a href="https://www.linkedin.com/in/mattraffel/" target="_blank" class="text-decoration-none text-dark">
                <i class="bi bi-linkedin me-2"></i> LinkedIn
            </a>
        </li>
        <li>
            <a href="https://github.com/tatmanblue" target="_blank" class="text-decoration-none text-dark">
                <i class="bi bi-github me-2"></i> GitHub
            </a>
        </li>
        <li>
            <a href="https://www.youtube.com/channel/UCmvNJdvUxgwUWeNh4nLNoiQ" target="_blank" class="text-decoration-none text-dark">
                <i class="bi bi-youtube me-2"></i> YouTube Channel
            </a>
        </li>
    </ul>
</div>


<h4>Contact form</h4>
@if (showContactForm == true)
{
    <div>
        <hr/>
        <EditForm Model="@contactData" OnValidSubmit="SendContactRequest" FormName="SendContactRequestForm">
            <div class="form-group row">
                <label for="Name" class="col-sm-2 col-form-label">
                    Name:
                </label>
                <div class="col-sm-10">
                    <InputText class="form-control" @bind-Value="contactData.Name" placeholder="Full Name"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">
                    Email:
                </label>
                <div class="col-sm-10">
                    <InputText class="form-control" @bind-Value="contactData.Email" placeholder="my.email@something.com"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="Message" class="col-sm-2 col-form-label">
                    Share away! (500 character limit):
                </label>
                <div class="col-sm-10">
                    <InputTextArea class="form-control" @bind-Value="contactData.Message" placeholder="I would like to comment on ...."/>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Send Request</button>
        </EditForm>
        <br/>
        <span>Please note your information will be kept confidential and only be used in a post on this blog upon written confirmation.</span>
    </div>
}
else
{
    <div>
        <hr/>
        <div>
            Thank you for reaching out <span class="highlight">@contactData.Name</span>. I will reply to you, shortly.
        </div>
    </div>
}