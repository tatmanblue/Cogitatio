@page "/TagEditor"
<h3>Tag Editor</h3>

@if (userState.IsAdmin == true)
{
    @if (posts == null)
    {
        <p>Loading...</p>
    }
    else if (!posts.Any())
    {
        <p>No posts found.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th></th>
                <th>Title</th>
                <th>Date</th>
                <th>Tags</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var post in posts)
            {
                <tr @onmouseover="() => ShowMessage(post.Id)">
                    <td></td>
                    <td>@post.Title</td>
                    <td>@post.PublishedDate.ToShortDateString()</td>
                    <td>@post.TagsDisplay</td>
                </tr>
                <tr class="bg-light" style="display: @(post.ShowDetails ? "table-row" : "none");">
                    <td colspan="4" class="p-2">
                        <div class="d-flex gap-2 align-items-center">
                            <div class="flex-grow-1">
                                <strong>Edit Tags:</strong>
                                <input type="text"
                                       @bind="post.EditableTags"
                                       @oninput="() => MarkAsChanged(post.Id)"
                                       class="form-control"
                                       style="width: 78%; min-width: 300px;"
                                       placeholder="Enter tags separated by commas" />
                            </div>
                            <div class="flex-shrink-0 mt-3">  <!-- Buttons stay on the same line, aligned nicely -->
                                <button class="btn btn-primary btn-sm" @onclick="() => SaveTags(post.Id)">Save</button>
                                <button class="btn btn-secondary btn-sm ms-2" @onclick="() => HideMessage(post.Id)">Cancel</button>
                            </div>
                        </div>
                    <!--
                        <strong>Edit Tags:</strong>
                        <input type="text"
                               @bind="post.EditableTags"
                               @oninput="() => MarkTagEdits(post.Id)"
                               class="form-control w-80"
                               placeholder="Enter tags separated by commas"/>
                        <div class="mt-2">
                            <button class="btn btn-primary btn-sm" @onclick="() => SaveTags(post.Id)">Save</button>
                            <button class="btn btn-secondary btn-sm" @onclick="() => HideMessage(post.Id)">Close</button>
                        </div>
                        -->
                    </td>
                </tr>           
            }
            </tbody>
        </table>
    }
}
else
{
    <div>Redirecting to Admin Login</div>
}