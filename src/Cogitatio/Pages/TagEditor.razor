@page "/TagEditor"
<h3>Tag Editor</h3>

@if (userState.IsAdmin == true)
{
    @if (posts == null)
    {
        <p>Loading...</p>
    }
    else if (!posts.Any())
    {
        <p>No posts found.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th></th>
                <th>Title</th>
                <th>Date</th>
                <th>Tags</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var post in posts)
            {
                <tr @onmouseover="() => ShowMessage(post.Id)">
                    <td></td>
                    <td>@post.Title</td>
                    <td>@post.PublishedDate.ToShortDateString()</td>
                    <td>@post.TagsDisplay</td>
                </tr>
                <tr class="bg-light" style="display: @(post.ShowDetails ? "table-row" : "none");">
                    <td colspan="4" class="p-2">
                        <strong>Edit Tags:</strong>
                        <input type="text" class="form-control w-80" @bind="post.EditableTags" />
                        <div class="mt-2">
                            <button class="btn btn-primary btn-sm" @onclick="() => SaveTags(post.Id)">Save</button>
                            <button class="btn btn-secondary btn-sm" @onclick="() => HideMessage(post.Id)">Close</button>
                        </div>
                    </td>
                </tr>           
            }
            </tbody>
        </table>
    }
}
else
{
    <div>Redirecting to Admin Login</div>
}