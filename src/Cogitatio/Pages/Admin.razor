@page "/Admin"
<h3>Admin Panel</h3>

@if (!userState.IsAdmin)
{
    <div class="login">
        <h4>Credentials are required:</h4>
        <div class="mb-3">
            <div class="input-group">
                <input id="credential" @bind="credential"
                       type="@passwordInputType"
                       placeholder="Enter credentials"
                       class="form-control" />
                <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordVisibility">
                    <i class="@passwordToggleIcon"></i>
                </button>
            </div>
        </div>        
        <button class="btn btn-primary mt-2" @onclick=@Login>Login</button>
        @if (false == string.IsNullOrEmpty(errorMessage))
        {
            <p class="text-danger">@errorMessage</p>
        }
    </div>
}

@if (userState.IsAdmin)
{
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <h5 class="card-title text-center">Admin Actions</h5>
            <div class="btn-group d-flex flex-wrap justify-content-center" role="group">
                <NavLink href="AdminDiag" class="btn btn-outline-primary mx-1 my-1">Diag</NavLink>
                <NavLink href="AdminSettings" class="btn btn-outline-primary mx-1 my-1">Settings</NavLink>
            </div>
            <div class="btn-group d-flex flex-wrap justify-content-center" role="group">
                <NavLink href="AdminAddPost" class="btn btn-outline-primary mx-1 my-1">Add New Post</NavLink>
                <NavLink href="AdminEditPost" class="btn btn-outline-primary mx-1 my-1">Edit Post</NavLink>
                <NavLink href="AdminContact" class="btn btn-outline-primary mx-1 my-1">Contacts</NavLink>
            </div>
            <div class="btn-group d-flex flex-wrap justify-content-center" role="group">
                <button class="btn btn-primary mx-1 my-1" @onclick=@Logout>Logout</button>
            </div>
        </div>
    </div>
}

<p style="margin-top: 2em; font-size: x-small">@userState.InstanceId</p>
