@page "/a/TagEditor"
<h3>Tag Editor</h3>

@* Tag summary cards: responsive, multiple per row *@
@if (usedTags == null || !usedTags.Any())
{
    <p class="text-muted small">Loading tags...</p>
}
else
{
    <div class="tag-list d-flex flex-wrap gap-2 mb-3">
        @foreach (var kv in usedTags.OrderByDescending(t => t.Value))
        {
            <div class="tag-card d-inline-flex align-items-center">
                <span class="tag-name">@kv.Key</span>
                <span class="tag-count" title="@($"{kv.Value} usages")">@kv.Value</span>
            </div>
        }
    </div>
}

@if (AdminUserState.IsAdmin == true)
{
    @if (posts == null)
    {
        <p>Loading...</p>
    }
    else if (!posts.Any())
    {
        <p>No posts found.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th></th>
                <th>Title</th>
                <th>Date</th>
                <th>Tags</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var post in posts)
            {
                <tr @onmouseover="() => ShowMessage(post.Id)">
                    <td></td>
                    <td>@post.Title</td>
                    <td>@post.PublishedDate.ToShortDateString()</td>
                    <td>@post.TagsDisplay</td>
                </tr>
                <tr class="bg-light" style="display: @(post.ShowDetails ? "table-row" : "none");">
                    <td colspan="4" class="p-2">
                        <div class="d-flex gap-2 align-items-center">
                            <div class="flex-grow-1">
                                <strong>Edit Tags:</strong>
                                <input type="text"
                                       @bind="post.EditableTags"
                                       @oninput="() => MarkAsChanged(post.Id)"
                                       class="form-control w-80"
                                       placeholder="Enter tags separated by commas" />
                            </div>
                            <div class="flex-shrink-0 mt-3">  <!-- Buttons stay on the same line, aligned nicely -->
                                <button class="btn btn-primary btn-sm" @onclick="() => SaveTags(post.Id)">Save</button>
                                <button class="btn btn-secondary btn-sm ms-2" @onclick="() => HideMessage(post.Id)">Cancel</button>
                            </div>
                        </div>
                    </td>
                </tr>           
            }
            </tbody>
        </table>
    }
    <div>
        <NavLink href="/Admin">Admin</NavLink>
    </div>
}
else
{
    <div>Redirecting to Admin Login</div>
}